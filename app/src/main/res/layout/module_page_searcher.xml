<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/page_searcher"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:visibility="gone"
        tools:visibility="visible"
        app:cardBackgroundColor="@color/colorPrimary"
>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="84dp"
    >
        <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColor="@android:color/white"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
            android:id="@+id/find_close"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="4dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_close"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{view -> module.hide()}"
    />
    <ImageView
            android:id="@+id/find_clear"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="84dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_clear_form"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{view -> module.clearInput()}"
    />

    <ImageView
            android:id="@+id/find_upward"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="44dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_up"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{view -> module.findUp()}"
    />

    <ImageView
            android:id="@+id/find_downward"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_down"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{view -> module.findDown()}"
    />

</androidx.cardview.widget.CardView>